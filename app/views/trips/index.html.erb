<div class='center'>
	<h1>Welcome, <%= @current_user.name %>!</h1>
</div>


<% if @trips.any? %>
  <h3>Trips to join</h3>
	<div class="row">
		<% @trips.each do |trip| %>
      <div class="col l4 m6">
        <div class="card blue-grey darken-4">
          <div class="card-content white-text">
            <span class="card-title"><%= trip.title %></span>
            <p><%= trip.date %></p>
          </div>
          <div class="card-action">
            <%= link_to 'Creator Profile', user_path(trip.user_id) %>
            <%= link_to 'Trip Details', trip_path(trip) %>
         	</div>
        </div>
    	</div>	
		<% end %>
	</div>
<% else %>
  <h3 class='center'>No trips to attend</h3>
<% end %>	

