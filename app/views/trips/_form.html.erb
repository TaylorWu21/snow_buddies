<%= form_for @trip do |f| %>

	<%= f.label :title, 'Title: ' %>
	<%= f.text_field :title %>

	<%= f.label :date, 'Date: ' %>
	<%= f.text_field :date %>

	<%= f.label :description, 'Description: ' %>
	<%= f.text_field :description %>

	<%= f.label :location, 'Location:' %>
	<%= f.select :location, options_for_select(@options), {}, class: 'browser-default' %>

	<%= f.submit %>
<% end %>